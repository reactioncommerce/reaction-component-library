{
  "name": "@reactioncommerce/styleguide",
  "version": "0.1.0",
  "description": "Reaction Commerce Style Guide",
  "homepage": "https://github.com/reactioncommerce/reaction-component-library",
  "main": "index.js",
  "repository": "https://github.com/reactioncommerce/reaction-component-library",
  "author": {
    "name": "Reaction Commerce",
    "email": "engineering@reactioncommerce.com",
    "url": "https://reactioncommerce.com"
  },
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "build": "echo 'No build step necessary'",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "yarn run lint:fix:eslint",
    "lint:fix:eslint": "eslint --fix .",
    "start": "yarn styleguide",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest package/src",
    "test:watch": "jest --watch package/src",
    "snyk-protect": "snyk protect"
  },
  "babel": {
    "plugins": [
      "transform-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./package/src"
          ]
        }
      ],
      "babel-plugin-styled-components"
    ],
    "presets": [
      "es2015",
      "react-app",
      "stage-2"
    ],
    "sourceMaps": true
  },
  "eslintConfig": {
    "extends": [
      "@reactioncommerce"
    ]
  },
  "eslintIgnore": [
    "config",
    "reports",
    "package/dist",
    "package/node_modules"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/reports/**",
      "!**/build/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "reports/coverage",
    "testResultsProcessor": "jest-junit",
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/package/src/setupTests.js",
    "testPathIgnorePatterns": [
      "/config/",
      "/node_modules/",
      "/reports/",
      "/package/dist/",
      "/package/node_modules/"
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "suiteName": "jest-tests"
  },
  "dependencies": {
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "styled-components": "3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-conventional": "7.0.1",
    "@reactioncommerce/eslint-config": "^1.0.1",
    "adr": "^1.0.6",
    "autoprefixer": "7.1.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-rewire-exports": "^0.3.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "1.1.3",
    "check-prop-types": "^1.1.2",
    "composable-form-tests": "^0.2.0",
    "css-loader": "0.28.11",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "2.29.0",
    "husky": "1.0.0-rc.9",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "jest-styled-components": "^5.0.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react-dev-utils": "^5.0.0",
    "react-styleguidist": "^6.5.3",
    "replace-in-files": "^1.1.1",
    "rimraf": "2.6.2",
    "semantic-release": "15.6.0",
    "snyk": "^1.69.10",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "snyk": true,
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "pkgRoot": "package/dist"
  }
}