{
  "name": "@reactioncommerce/styleguide",
  "version": "0.1.0",
  "description": "",
  "homepage": "https://github.com/reactioncommerce/styleguide",
  "main": "index.js",
  "repository": "https://github.com/reactioncommerce/styleguide",
  "author": {
    "name": "Reaction Commerce",
    "email": "engineering@reactioncommerce.com",
    "url": "https://reactioncommerce.com"
  },
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "echo 'No build step necessary'",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier-check 'src/**/*.js' 'test/**/*.js'",
    "lint:fix": "yarn run lint:fix:eslint && yarn run lint:fix:prettier",
    "lint:fix:eslint": "eslint --fix .",
    "lint:fix:prettier": "prettier --write 'src/**/*.js' 'test/**/*.js'",
    "start": "yarn styleguide",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "react-scripts test --env=jsdom",
    "test:once": "CI=true npm test"
  },
  "babel": {
    "plugins": [
      "babel-plugin-styled-components"
    ],
    "presets": [
      "env",
      "stage-2",
      "react"
    ],
    "sourceMaps": true
  },
  "eslintConfig": {
    "extends": [
      "@reactioncommerce",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "dist",
    "reports",
    "styleguide"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/reports/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "reports/coverage",
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "suiteName": "jest-tests"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "polished": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.0",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "@reactioncommerce/eslint-config": "^1.0.1",
    "adr": "^1.0.6",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.3.0",
    "jest-junit": "3.6.0",
    "jest-styled-components": "^4.10.0",
    "nodemon": "^1.14.12",
    "prettier": "1.10.2",
    "prettier-check": "^2.0.0",
    "react-styleguidist": "^6.2.5",
    "rimraf": "^2.6.2",
    "snyk": "^1.69"
  }
}
