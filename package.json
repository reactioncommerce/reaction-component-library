{
  "name": "@reactioncommerce/styleguide",
  "version": "0.1.0",
  "description": "Reaction Commerce Style Guide",
  "homepage": "https://github.com/reactioncommerce/reaction-component-library",
  "main": "index.js",
  "repository": "https://github.com/reactioncommerce/reaction-component-library",
  "author": {
    "name": "Reaction Commerce",
    "email": "engineering@reactioncommerce.com",
    "url": "https://reactioncommerce.com"
  },
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "build": "echo 'No build step necessary'",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "yarn run lint:fix:eslint",
    "lint:fix:eslint": "eslint --fix .",
    "start": "yarn styleguide",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest",
    "snyk-protect": "snyk protect"
  },
  "babel": {
    "plugins": [
      "transform-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "helpers": "./src/helpers"
          }
        }
      ],
      "babel-plugin-styled-components"
    ],
    "presets": [
      "es2015",
      "react-app",
      "stage-2"
    ],
    "sourceMaps": true
  },
  "eslintConfig": {
    "extends": [
      "@reactioncommerce"
    ]
  },
  "eslintIgnore": [
    "config",
    "build",
    "reports"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/reports/**",
      "!**/build/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "reports/coverage",
    "testResultsProcessor": "jest-junit",
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "testPathIgnorePatterns": [
      "/config/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "suiteName": "jest-tests"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "polished": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "@reactioncommerce/eslint-config": "^1.0.1",
    "adr": "^1.0.6",
    "autoprefixer": "7.1.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-rewire-exports": "^0.3.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "1.1.3",
    "css-loader": "0.28.11",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "2.29.0",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "jest-styled-components": "^5.0.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react-dev-utils": "^5.0.0",
    "react-styleguidist": "^6.2.5",
    "rimraf": "^2.6.2",
    "snyk": "^1.69.10",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "snyk": true
}
