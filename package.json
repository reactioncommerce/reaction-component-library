{
  "name": "@reactioncommerce/styleguide",
  "version": "0.1.0",
  "description": "Reaction Commerce - Example Storefront Component Library",
  "homepage": "https://github.com/reactioncommerce/reaction-component-library",
  "main": "index.js",
  "repository": "https://github.com/reactioncommerce/reaction-component-library",
  "author": {
    "name": "Reaction Commerce",
    "email": "engineering@reactioncommerce.com",
    "url": "https://reactioncommerce.com"
  },
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "echo 'No build step necessary'",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "yarn run lint:fix:eslint",
    "lint:fix:eslint": "eslint --fix .",
    "start": "yarn styleguide",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest package/src",
    "test:watch": "jest --watch package/src",
    "test:file": "jest --no-cache --watch --coverage=false",
    "snyk-protect": "snyk protect"
  },
  "eslintConfig": {
    "extends": [
      "@reactioncommerce"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "config",
    "reports",
    "package/dist",
    "package/node_modules",
    "styleguide/dist"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/reports/**",
      "!**/build/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "reports/coverage",
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/package/src/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/config/",
      "<rootDir>/node_modules/",
      "<rootDir>/reports/",
      "<rootDir>/package/dist/",
      "<rootDir>/package/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "./babel.jest.js"
    }
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "suiteName": "jest-tests"
  },
  "dependencies": {
    "@babel/runtime": "~7.6.2",
    "@reactioncommerce/components-context": "~1.2.0",
    "core-js": "^3.2.1",
    "lodash": "~4.17.15",
    "prop-types": "~15.7.2",
    "react": "~16.9.0",
    "react-container-query": "~0.11.0",
    "react-dom": "~16.9.0",
    "react-stripe-elements": "~5.0.1",
    "reacto-form": "~1.4.0",
    "regenerator-runtime": "^0.13.3",
    "styled-components": "~4.4.0"
  },
  "devDependencies": {
    "@babel/cli": "~7.6.2",
    "@babel/core": "~7.6.2",
    "@babel/node": "~7.6.2",
    "@babel/plugin-proposal-class-properties": "~7.5.5",
    "@babel/plugin-proposal-decorators": "~7.6.0",
    "@babel/plugin-proposal-export-namespace-from": "~7.5.2",
    "@babel/plugin-proposal-function-sent": "~7.5.0",
    "@babel/plugin-proposal-json-strings": "~7.2.0",
    "@babel/plugin-proposal-numeric-separator": "~7.2.0",
    "@babel/plugin-proposal-throw-expressions": "~7.2.0",
    "@babel/plugin-syntax-dynamic-import": "~7.2.0",
    "@babel/plugin-syntax-import-meta": "~7.2.0",
    "@babel/plugin-transform-runtime": "~7.6.2",
    "@babel/preset-env": "~7.6.2",
    "@babel/preset-react": "~7.0.0",
    "@commitlint/cli": "~8.2.0",
    "@commitlint/config-conventional": "~8.2.0",
    "@reactioncommerce/eslint-config": "~2.1.0",
    "adr": "~1.1.2",
    "autoprefixer": "~9.6.1",
    "babel-core": "~7.0.0-bridge.0",
    "babel-eslint": "~10.0.3",
    "babel-jest": "~24.9.0",
    "babel-loader": "~8.0.6",
    "babel-plugin-module-resolver": "~3.2.0",
    "babel-plugin-rewire-exports": "~2.0.0",
    "babel-plugin-styled-components": "~1.10.6",
    "case-sensitive-paths-webpack-plugin": "~2.2.0",
    "chalk": "~2.4.2",
    "check-prop-types": "~1.1.2",
    "composable-form-tests": "~1.0.1",
    "css-loader": "~3.2.0",
    "dotenv": "~8.1.0",
    "dotenv-expand": "~5.1.0",
    "enzyme": "~3.10.0",
    "enzyme-adapter-react-16": "~1.14.0",
    "eslint": "~6.4.0",
    "eslint-loader": "~3.0.0",
    "eslint-plugin-babel": "~5.3.0",
    "eslint-plugin-import": "~2.18.2",
    "eslint-plugin-jest": "~22.17.0",
    "eslint-plugin-jsx-a11y": "~6.2.3",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-react": "~7.14.3",
    "extract-text-webpack-plugin": "~3.0.2",
    "file-loader": "~4.2.0",
    "fs-extra": "~8.1.0",
    "html-webpack-plugin": "~3.2.0",
    "husky": "~3.0.5",
    "ignore-loader": "~0.1.2",
    "jest": "~24.9.0",
    "jest-junit": "~8.0.0",
    "jest-styled-components": "~6.3.3",
    "object-assign": "~4.1.1",
    "postcss-flexbugs-fixes": "~4.1.0",
    "postcss-loader": "~3.0.0",
    "promise": "~8.0.3",
    "raf": "~3.4.1",
    "react-dev-utils": "~9.0.4",
    "react-styleguidist": "~9.1.16",
    "react-test-renderer": "~16.9.0",
    "replace-in-files": "~2.0.3",
    "rimraf": "~3.0.0",
    "semantic-release": "~15.13.24",
    "snyk": "~1.228.5",
    "style-loader": "~1.0.0",
    "sw-precache-webpack-plugin": "~0.11.5",
    "url-loader": "~2.1.0",
    "webpack": "4.41.0",
    "webpack-dev-server": "~3.8.1",
    "webpack-manifest-plugin": "~2.1.1",
    "whatwg-fetch": "~3.0.0",
    "yarn": "~1.17.3"
  },
  "snyk": true,
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "pkgRoot": "package/dist"
  }
}
